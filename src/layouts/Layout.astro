---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />

    <meta property="og:title" content="Karan Ravindra" />
    <meta
      property="og:image"
      content="https://karanravindra.me/thumbnails/self.webp"
    />
    <meta
      property="og:description"
      content="Karan Ravindra's personal website"
    />
    <meta property="og:url" content="https://karanravindra.me" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="627" />
    <meta property="og:type" content="website" />

    <title>{title}</title>
  </head>

  <body class="flex min-h-screen flex-col bg-white dark:bg-gray-900">
    <Header />
    <main class="flex flex-grow flex-col pt-20">
      <slot />
    </main>
    <Footer />
  </body>
</html>
